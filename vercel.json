{
  "version": 2,
  "builds": [
    {
      "src": "Backend/package.json",
      "use": "@vercel/node",
      "config": {
        "includeFiles": ["Backend/**"]
      }
    },
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/Backend/simple-server.js"
    },
    {
      "src": "/static/(.*)",
      "headers": {
        "cache-control": "s-maxage=31536000,immutable"
      }
    },
    {
      "src": "/(.*)",
      "dest": "/Frontend/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
